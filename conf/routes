# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET     /login                              controllers.Application.login()
POST    /login                              controllers.Application.authenticate()
GET     /logout                             controllers.Application.logout()

# BugReporting
GET     /bugs                       controllers.BugReportController.reports()
GET     /newReport					controllers.BugReportController.newReport()
GET		/bug/list					controllers.BugReportController.list()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# sensor_types
GET		/sensorTypes				controllers.SensorTypeController.sensorTypes()
POST    /sensorTypes/new                controllers.SensorTypeController.newSensorType()
POST    /sensorTypes    	controllers.SensorTypeController.deleteSensorType()

# device_types
GET		/deviceTypes				controllers.DeviceTypeController.deviceTypes()
POST    /deviceTypes/new                controllers.DeviceTypeController.newDeviceType()
POST    /deviceTypes     controllers.DeviceTypeController.deleteDeviceType()

# devices
GET		/devices				controllers.DeviceController.devices()
POST    /devices/new                controllers.DeviceController.newDevice()
POST    /devices     controllers.DeviceController.deleteDevice()

# sensors
GET		/sensors				controllers.SensorController.sensors()
POST    /sensors/new                controllers.SensorController.newSensor()
POST   /sensors/     controllers.SensorController.deleteSensor()

# sensor_categories
GET		/sensorCategories				controllers.SensorCategoryController.sensorCategories()
POST    /sensorCategories                controllers.SensorCategoryController.newSensorCategory()
#POST    /sensorCategories/:id/delete     controllers.SensorCategoryController.deleteSensorCategory(id: String)

# dashboard
GET		/dashboard				controllers.DashboardController.dashboardItems()



