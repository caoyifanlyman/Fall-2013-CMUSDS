# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET     /login                              controllers.Application.login()
POST    /login                              controllers.Application.authenticate()
GET     /logout                             controllers.Application.logout()

# BugReporting
GET     /bugs                       controllers.BugReportController.reports()
GET     /newReport					controllers.BugReportController.newReport()
GET		/bug/list					controllers.BugReportController.list()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# sensor_types
GET		/sensorTypes				controllers.SensorTypeController.sensorTypes()
POST    /sensorTypes                controllers.SensorTypeController.newSensorType()
GET    /sensorTypes/delete/:id    controllers.SensorTypeController.deleteSensorType(id: String)

# device_types
GET		/deviceTypes				controllers.DeviceTypeController.deviceTypes()
POST    /deviceTypes                controllers.DeviceTypeController.newDeviceType()
GET    /deviceTypes/delete/:id     controllers.DeviceTypeController.deleteDeviceType(id: String)

# devices
GET		/devices				controllers.DeviceController.devices()
POST    /devices                controllers.DeviceController.newDevice()
GET    /devices/delete/:id     controllers.DeviceController.deleteDevice(id: String)

# sensors
GET		/sensors				controllers.SensorController.sensors()
POST    /sensors                controllers.SensorController.newSensor()
GET    /sensors/delete/:id     controllers.SensorController.deleteSensor(id: String)

# sensor_categories
GET		/sensorCategories				controllers.SensorCategoryController.sensorCategories()
POST    /sensorCategories                controllers.SensorCategoryController.newSensorCategory()
#POST    /sensorCategories/:id/delete     controllers.SensorCategoryController.deleteSensorCategory(id: String)



