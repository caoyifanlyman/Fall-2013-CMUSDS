# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# sensor_types
GET		/sensorTypes				controllers.SensorTypeController.sensorTypes()
POST    /sensorTypes                controllers.SensorTypeController.newSensorType()
POST    /sensorTypes/:id/delete     controllers.SensorTypeController.deleteSensorType(id: Long)

# devices
GET		/devices				controllers.DeviceController.devices()
POST    /devices                controllers.DeviceController.newDevice()
POST    /devices/:id/delete     controllers.DeviceController.deleteDevice(id: Long)
